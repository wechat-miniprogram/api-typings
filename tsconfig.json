{
    "compilerOptions": {
        "allowJs": false,
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "lib": ["es6"],
        "module": "CommonJS",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "ES5",
        "typeRoots": ["./node_modules/**/*.d.ts"]
    },
    "include": ["./test"],
    "exclude": ["node_modules"]
}
